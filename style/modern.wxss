/* 现代化紫微斗数排盘样式 */
/* 具有设计感、国际化的风格 */

/* 页面容器 */
.page-container {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  min-height: 100vh;
  padding: 12rpx; /* 缩小左右边距 */
}

/* 头部区域 */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 排盘区域 */
.chart-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 32rpx;
  overflow: hidden;
  margin-top: 0; /* 排盘区域上移 */
}

.chart-controls {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  background: rgba(248, 250, 252, 0.8);
}

.control-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.control-spacer {
  flex: 1;
}

/* 运势区域 */
.fortune-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 32rpx;
  overflow: hidden;
}

.fortune-controls {
  display: flex;
  gap: 12rpx;
  padding: 24rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  background: rgba(248, 250, 252, 0.8);
  flex-wrap: wrap;
}

.fortune-content {
  padding: 24rpx;
}

.fortune-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 20rpx;
}

.fortune-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.fortune-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 16rpx;
  background: rgba(248, 250, 252, 0.6);
  border-radius: 12rpx;
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.fortune-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.fortune-value {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 600;
}

/* 分析区域 */
.analysis-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1px solid rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  background: rgba(248, 250, 252, 0.8);
}

.analysis-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e293b;
}

.analysis-content {
  padding: 24rpx;
}

.analysis-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(248, 250, 252, 0.6);
  border-radius: 12rpx;
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.analysis-label {
  font-size: 26rpx;
  color: #64748b;
  font-weight: 500;
}

.analysis-value {
  font-size: 26rpx;
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  max-width: 60%;
}

/* 格局分析 */
.patterns-section {
  margin-top: 24rpx;
}

.patterns-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #7c3aed;
  margin-bottom: 16rpx;
}

.pattern-card {
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: rgba(124, 58, 237, 0.08);
  border-radius: 16rpx;
  border: 1px solid rgba(124, 58, 237, 0.2);
}

.pattern-name {
  font-weight: 600;
  color: #7c3aed;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.pattern-description {
  font-size: 26rpx;
  color: #475569;
  margin-bottom: 8rpx;
  line-height: 1.5;
}

.pattern-effects {
  font-size: 26rpx;
  color: #16a34a;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.pattern-details {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 检查项目 */
.checks-section {
  margin-top: 24rpx;
}

.checks-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 12rpx;
}

.check-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(248, 250, 252, 0.6);
  border-radius: 8rpx;
  border: 1px solid rgba(0, 0, 0, 0.04);
}

.check-label {
  font-size: 24rpx;
  color: #64748b;
  font-weight: 500;
}

.check-value {
  font-size: 24rpx;
  color: #1e293b;
  font-weight: 600;
  text-align: right;
  max-width: 50%;
}

/* 按钮样式 */
.btn {
  border-radius: 12rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  border: none;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}

.btn-outline {
  background: rgba(255, 255, 255, 0.9);
  color: #64748b;
  border: 1px solid rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

.btn-outline:active {
  background: rgba(248, 250, 252, 0.9);
  transform: translateY(1rpx);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .page-container {
    padding: 16rpx;
  }
  
  .header-section {
    padding: 20rpx 24rpx;
    margin-bottom: 24rpx;
  }
  
  .header-title {
    font-size: 36rpx;
  }
  
  .fortune-grid {
    grid-template-columns: 1fr;
  }
  
  .analysis-grid {
    grid-template-columns: 1fr;
  }
}

/* 动画效果 */
.chart-section,
.fortune-section,
.analysis-section {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.chart-section:hover,
.fortune-section:hover,
.analysis-section:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 开关样式优化 */
switch {
  transform: scale(0.9);
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(0, 0, 0, 0.3);
} 