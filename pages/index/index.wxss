@import "../../style/modern.wxss";

/* 页面特定样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
  z-index: 1;
  isolation: isolate;
}

/* 确保页面根容器不会阻挡弹层 */
page {
  position: relative;
  z-index: auto;
}

/* 专门处理Canvas原生组件的层级问题 */
canvas {
  z-index: -1 !important;
}

/* 强制设置所有Canvas元素为最低层级 */
.zwds-chart canvas {
  z-index: -1 !important;
  position: relative !important;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .page-container {
    padding: 16rpx;
    padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  }
}

/* 排盘区域样式 */
.chart-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 0px;
  padding: 16px 0;
  margin: 0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  height: calc(100vh - 100px);
  position: relative;
  z-index: 1;
}

/* 控制按钮区域 */
.chart-controls {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 8px 16px;
  margin-bottom: 8px;
  position: relative;
  z-index: 5;
}

/* 中宫信息区域样式 */
.center-palace {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 16px;
  margin: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.info-row {
  margin-bottom: 8px;
  font-size: 8px;
  line-height: 1.2;
}

.info-row:last-child {
  margin-bottom: 0;
}

.name {
  font-weight: bold;
  color: #1e293b;
  margin-right: 12px;
}

.five-elements {
  color: #3b82f6;
}

.true-solar-time, .clock-time {
  color: #059669;
}

.lunar-time {
  color: #7c3aed;
}

.master-info {
  color: #dc2626;
}

.four-pillars {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}

.pillars-left, .pillars-right {
  flex: 1;
}

.pillars-title {
  font-size: 8px;
  color: #6b7280;
  margin-bottom: 4px;
  display: block;
}

.pillar-group {
  display: flex;
  gap: 8px;
}

.pillar {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 4px;
  padding: 2px 4px;
  min-width: 20px;
}

.pillar-text {
  font-size: 8px;
  color: #1e293b;
  line-height: 1;
}

/* 底部弹出命例选择器样式 */
.profile-selector-overlay {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  width: 100vw !important;
  height: 100vh !important;
  background: rgba(0, 0, 0, 0.5) !important;
  z-index: 999999 !important;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.profile-selector-overlay.show {
  opacity: 1 !important;
  visibility: visible !important;
}

.profile-selector-bottom {
  position: fixed !important;
  bottom: 0 !important;
  left: 0 !important;
  right: 0 !important;
  width: 100vw !important;
  background: white !important;
  border-radius: 20px 20px 0 0;
  z-index: 1000000 !important;
  max-height: 60vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.2);
}

.profile-selector-bottom.show {
  transform: translateY(0) !important;
}

/* 针对微信小程序Canvas的特殊处理 */
.profile-selector-overlay,
.profile-selector-bottom {
  -webkit-transform: translateZ(0) !important;
  transform: translateZ(0) !important;
  will-change: transform !important;
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 24px 16px;
  border-bottom: 1px solid #f1f5f9;
  position: relative;
}

.selector-header::before {
  content: '';
  position: absolute;
  top: 8px;
  left: 50%;
  transform: translateX(-50%);
  width: 36px;
  height: 4px;
  background: #e2e8f0;
  border-radius: 2px;
}

.selector-title {
  font-size: 18px;
  font-weight: 600;
  color: #1e293b;
  margin: 0;
}

.selector-close {
  font-size: 24px;
  color: #64748b;
  cursor: pointer;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.2s ease;
}

.selector-close:hover {
  background: #f1f5f9;
}

.profile-list {
  max-height: 40vh;
  padding: 8px 0 20px;
}

.profile-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 24px;
  border-bottom: 1px solid #f8fafc;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.profile-item:hover {
  background: #f8fafc;
}

.profile-item.active {
  background: rgba(59, 130, 246, 0.05);
}

.profile-item:last-child {
  border-bottom: none;
}

.profile-main {
  flex: 1;
}

.profile-name {
  font-size: 16px;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 4px;
}

.profile-desc {
  font-size: 14px;
  color: #64748b;
  line-height: 1.4;
}

.profile-check {
  font-size: 18px;
  color: #3b82f6;
  font-weight: bold;
  width: 24px;
  text-align: center;
}

