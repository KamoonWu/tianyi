@import "../../style/modern.wxss";

/* 页面特定样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .page-container {
    padding: 16rpx;
  }
}

/* 排盘区域样式 */
.chart-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 0px;
  padding: 16px 0;
  margin: 0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  height: 100vh;
}

/* 控制按钮区域 */
.chart-controls {
  display: flex;
  justify-content: center;
  gap: 8px;
  padding: 8px 16px;
  margin-bottom: 8px;
}

/* 中宫信息区域样式 */
.center-palace {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 16px;
  margin: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.info-row {
  margin-bottom: 8px;
  font-size: 8px;
  line-height: 1.2;
}

.info-row:last-child {
  margin-bottom: 0;
}

.name {
  font-weight: bold;
  color: #1e293b;
  margin-right: 12px;
}

.five-elements {
  color: #3b82f6;
}

.true-solar-time, .clock-time {
  color: #059669;
}

.lunar-time {
  color: #7c3aed;
}

.master-info {
  color: #dc2626;
}

.four-pillars {
  display: flex;
  justify-content: space-between;
  margin-top: 12px;
}

.pillars-left, .pillars-right {
  flex: 1;
}

.pillars-title {
  font-size: 8px;
  color: #6b7280;
  margin-bottom: 4px;
  display: block;
}

.pillar-group {
  display: flex;
  gap: 8px;
}

.pillar {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(59, 130, 246, 0.1);
  border-radius: 4px;
  padding: 2px 4px;
  min-width: 20px;
}

.pillar-text {
  font-size: 8px;
  color: #1e293b;
  line-height: 1;
}

/* 命例选择器样式 */
.profile-selector {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.profile-selector.show {
  opacity: 1;
  visibility: visible;
}

.selector-content {
  background: white;
  border-radius: 12px;
  padding: 24px;
  margin: 20px;
  max-width: 400px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.selector-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #1e293b;
}

.profile-list {
  margin-bottom: 20px;
}

.profile-item {
  padding: 12px 16px;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  margin-bottom: 8px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.profile-item:last-child {
  margin-bottom: 0;
}

.profile-item:hover {
  background: #f9fafb;
  border-color: #d1d5db;
}

.profile-item.active {
  background: rgba(59, 130, 246, 0.1);
  border-color: #3b82f6;
}

.profile-name {
  font-size: 14px;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 4px;
}

.profile-desc {
  font-size: 12px;
  color: #6b7280;
  line-height: 1.4;
}

.selector-footer {
  text-align: center;
  padding-top: 16px;
  border-top: 1px solid #e5e7eb;
}

